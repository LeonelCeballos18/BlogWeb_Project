<%- include("partials/header.ejs") %>
<body>
    <div class="create-post container">
        <label for="post-input"><img class="profilePhoto" src="img/user11.jpg" alt=""></label>
        <input type="text" id="post-input" data-bs-toggle="modal" data-bs-target="#exampleModal" placeholder="WhatÂ´s on your mind?">
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Create post</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="submit" method="post" id="newPost">
                <div class="mb-3">
                  <p><img class="profilePhoto" src="img/user11.jpg" alt=""> MEGBraZil </p>
                  <input type="text" class="form-control" id="title-text" name="title" placeholder="Title" required>
                  <br>
                  <textarea class="form-control" id="message-text" placeholder="Text" name="post" required></textarea>
                </div>
                <div class="modal-footer">
                  <button type="submit" class="btn btn-primary">Post</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    <% posts.forEach(post => { %>
    <div class="container">
        <div class="post-container">
            <div class="user"><img src="<%= `img/user${post.user.id}.jpg` %>" alt="" class="profilePhoto"><h2 class="nameUser"><%= post.user.username %></h2></div>
            <div><h2 class="title"><%= post.title %></h2></div>
            <div class="post"><p><%= post.body %></p></div>
            <ul class="buttons-actions">
                <li class="like likeButton" data-post-id="<%= post.id %>" data-post-liked="<%= liked %>"><img src="img/heart.svg" class="likeImg" alt="" data-post-id="<%= post.id %>"></li>
                <li class="share shareButton" data-post-id="<%= post.id %>" data-post-shared="<%= shared %>"><img src="img/share.png" alt=""></li>
            </ul> 
            <br>
            <p id="likeCount<%= post.id %>"><%= Math.floor(Math.random()*50+1); %> Likes</p>
            </div>
        </div>
    </div>
    <% }); %>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.5.1/gsap.min.js"></script>
    <script src="js/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>